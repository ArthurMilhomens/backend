generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "postgresql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  decks    Deck[]
}

model Deck {
  id     String   @id @default(uuid())
  name   String
  colors String[]
  cards  String[]
  User   User     @relation(fields: [userId], references: [id])
  userId String
}
